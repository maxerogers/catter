<li>
  <div class='row' id='1'>
    <div class='col-xs-2 avatar'>
    <%= image_tag('cat-05.jpg',class: 'tweet_avatar') %>
    </div>
    <div class='col-xs-10'>
    <p> <%= link_to "@#{tweet.user.name}", user_path(tweet.user), class: 'author_tag' %>  <span class='time_stamp'><%= tweet.updated_at%></span> </p>
    <p> <%= tweet.message %> </p>
    <div class='buttons'>
      <button class='reply btn btn-link'><span class='glyphicon glyphicon-send'></span> Reply </button>
      <input type="hidden" id="tweet_id" value="<%= tweet.id %>" />
      <button class='retweet btn btn-link'><span class='glyphicon glyphicon-share-alt'></span> Retweet </button>
    </div>
    <br><br>
    <%= form_tag('/reply', class: 'reply_box') do%>
      <div class='input-group'>
          <textarea class='form-control custom-control' rows='3' style='resize:none'></textarea>
          <span class='input-group-addon btn btn-primary'>Send</span>
      </div>
    <% end %>
    </div>
  </div>
</li>
